
<% if current_user.login_approval == 'Yes' %>
<% if current_user.role == 'Admin' or current_user.role == 'Volunteer' or current_user.role == 'Contributor' %>
<h1>Listing articles</h1>
<p><u><b><%= link_to '+New article', new_article_path %></b></u></p>
 
<!-- table class="reference" style="width:45%; border:5; cellpadding:4; cellspacing:3" -->
<table id="customers">
  <tr>
    <th>Language</th>
    <th>Category</th>
    <th>English Text</th>
    <th>Phonetic Text</th>
    <th>Picture</th>
<% if current_user.role == 'Admin' or current_user.role == 'Volunteer' %>
    <th colspan="3"></th>
<% else %>
    <th colspan="2"></th>
<% end %>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><% if article.language.present? %><%= article.language.name %><% end %></td>
      <td><%= article.category %></td>
      <td><%= article.english %></td>
      <td><%= article.phonetic %></td>
      <td><% if article.picture.present? %>Uploaded<% end %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
<% if current_user.role == 'Admin' or current_user.role == 'Volunteer' %>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
    </tr>
  <% end %>
</table>
<hr/>
  <% end %>
  <% end %>
